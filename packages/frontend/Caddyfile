{
	email {$ACME_EMAIL}
}

{$FRONTEND_DOMAIN:agentbox.fyi} {
	tls {
		dns cloudflare {env.CF_API_TOKEN}
		resolvers 1.1.1.1
	}

	handle {
		root * /srv
		try_files {path} /index.html
		file_server
	}
}

{$API_DOMAIN:api.agentbox.fyi} {
	tls {
		dns cloudflare {env.CF_API_TOKEN}
		resolvers 1.1.1.1
	}

	handle {
		reverse_proxy backend:8080
	}
}
